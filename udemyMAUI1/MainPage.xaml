<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="udemyMAUI1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <ImageButton
                Source="dotnet_bot.png"
                HeightRequest="185"
                Clicked="ImageButton_Clicked"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <Label
                Text="Hallo Welt!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" HorizontalOptions="Start" />

            <Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <BoxView VerticalOptions="FillAndExpand"></BoxView>
            
            <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" Spacing="30">
                <Button
                    x:Name="CounterBtn"
                    Text="Page 1" 
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="FillAndExpand" />

                <Button
                    x:Name="TabbedBtn"
                    Text="Tabbed" 
                    Clicked="OnTabbedClicked"
                    HorizontalOptions="FillAndExpand" />

                <Button
                    x:Name="FlyoutBtn"
                    Text="Flyout"
                    Clicked="OnFlyoutClicked"
                    HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
