<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="udemyMAUI1.Page1"
             Title="Page1">
    
    <VerticalStackLayout>
        <Button
            Margin="20"
            Background="#8474FA" 
                FontSize="Large" 
                BorderWidth="2" 
                BackgroundColor="#2AB3D7" 
                Text="Hier kÃ¶nnte ihre Werbung stehen."
                TextColor="White"
                Clicked="Button_Clicked" VerticalOptions="Fill"
        />

        <Grid Margin="20" ColumnDefinitions=".3*,.6*,*" RowDefinitions="*,*,*" RowSpacing="20" ColumnSpacing="10">
            <Button Text="Button 1" Grid.Row="0" Grid.Column="0" BackgroundColor="#59AEF3" HeightRequest="80" />
            <Button Text="Button 2" Grid.Row="0" Grid.Column="1" BackgroundColor="#0088FF" />
            <Button Text="Button 3" Grid.Row="0" Grid.Column="2" BackgroundColor="#265BCF" />
            <Button Text="Button 4" Grid.Row="1" Grid.Column="0" HeightRequest="80" />
            <Button Text="Button 5" Grid.Row="1" Grid.Column="1" />
            <Button Text="Button 6" Grid.Row="1" Grid.Column="2" />
            <Button Text="Button 7" Grid.Row="2" Grid.Column="0" HeightRequest="80" />
            <Button Text="Button 8" Grid.Row="2" Grid.Column="1" />
            <Button Text="Button 9" Grid.Row="2" Grid.Column="2" />
        </Grid>

        <HorizontalStackLayout Spacing="40" HorizontalOptions="CenterAndExpand">
            <VerticalStackLayout HorizontalOptions="CenterAndExpand">
                <CarouselView IndicatorView="indicatorView1">
                    <CarouselView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>candy_1.png</x:String>
                            <x:String>candy_2.png</x:String>
                            <x:String>candy_3.png</x:String>
                            <x:String>candy_4.png</x:String>
                            <x:String>candy_5.png</x:String>
                            <x:String>candy_6.png</x:String>
                            <x:String>candy_7.png</x:String>
                            <x:String>candy_8.png</x:String>
                        </x:Array>
                    </CarouselView.ItemsSource>
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame Margin="20" BorderColor="DarkGray" CornerRadius="5" HasShadow="True" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                                    <Image Source="{Binding .}" />
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <IndicatorView x:Name="indicatorView1" HorizontalOptions="Center" IndicatorColor="LightGray" SelectedIndicatorColor="DarkGray" />
            </VerticalStackLayout>

            <VerticalStackLayout HorizontalOptions="CenterAndExpand" Rotation="90">
                <CarouselView IndicatorView="indicatorView2">
                    <CarouselView.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>candy_1.png</x:String>
                            <x:String>candy_2.png</x:String>
                            <x:String>candy_3.png</x:String>
                            <x:String>candy_4.png</x:String>
                            <x:String>candy_5.png</x:String>
                            <x:String>candy_6.png</x:String>
                            <x:String>candy_7.png</x:String>
                            <x:String>candy_8.png</x:String>
                        </x:Array>
                    </CarouselView.ItemsSource>
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame Margin="20" BorderColor="DarkGray" CornerRadius="5" HasShadow="True" HeightRequest="100" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                                    <Image Source="{Binding .}" />
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <IndicatorView x:Name="indicatorView2" HorizontalOptions="Center" IndicatorColor="LightGray" SelectedIndicatorColor="DarkGray" />
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>