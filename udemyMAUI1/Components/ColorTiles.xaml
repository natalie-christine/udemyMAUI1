<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="udemyMAUI1.Components.ColorTiles">

    <ContentView.Resources>
        <Style TargetType="Frame">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="WidthRequest" Value="30" />
            <Setter Property="HeightRequest" Value="30" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Text" Value="T" />
            <Setter Property="HorizontalTextAlignment" Value="Center" />
            <Setter Property="VerticalTextAlignment" Value="Center" />
        </Style>
    </ContentView.Resources>

    <HorizontalStackLayout HeightRequest="60">
        <Grid RowDefinitions=".5*,.5*" ColumnDefinitions=".5*,.5*" WidthRequest="60">
            <Frame BackgroundColor="{DynamicResource DynamicPrimary}">
                <Label TextColor="{DynamicResource DynamicPrimaryText}" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="1" BackgroundColor="{DynamicResource DynamicSecondary}">
                <Label TextColor="{DynamicResource DynamicSecondaryText}" />
            </Frame>
            <Frame Grid.Column="1" BackgroundColor="{DynamicResource DynamicTertiary}">
                <Label TextColor="{DynamicResource DynamicTertiaryText}" />
            </Frame>
            <Frame Grid.Row="1" BackgroundColor="{DynamicResource DynamicQuartary}">
                <Label TextColor="{DynamicResource DynamicQuartaryText}" />
            </Frame>
        </Grid>
        <Grid RowDefinitions=".5*,.5*" ColumnDefinitions=".5*,.5*" WidthRequest="60">
            <Frame BackgroundColor="{DynamicResource DynamicPrimaryLight}">
                <Label TextColor="{DynamicResource DynamicPrimaryText}" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="1" BackgroundColor="{DynamicResource DynamicSecondaryLight}">
                <Label TextColor="{DynamicResource DynamicSecondaryText}" />
            </Frame>
            <Frame Grid.Column="1" BackgroundColor="{DynamicResource DynamicTertiaryLight}">
                <Label TextColor="{DynamicResource DynamicTertiaryText}" />
            </Frame>
            <Frame Grid.Row="1" BackgroundColor="{DynamicResource DynamicQuartaryLight}">
                <Label TextColor="{DynamicResource DynamicQuartaryText}" />
            </Frame>
        </Grid>
        <Grid RowDefinitions=".5*,.5*" ColumnDefinitions=".5*,.5*" WidthRequest="60">
            <Frame BackgroundColor="{DynamicResource DynamicPrimaryDark}">
                <Label TextColor="{DynamicResource DynamicPrimaryText}" />
            </Frame>
            <Frame Grid.Column="1" Grid.Row="1" BackgroundColor="{DynamicResource DynamicSecondaryDark}">
                <Label TextColor="{DynamicResource DynamicSecondaryText}" />
            </Frame>
            <Frame Grid.Column="1" BackgroundColor="{DynamicResource DynamicTertiaryDark}">
                <Label TextColor="{DynamicResource DynamicTertiaryText}" />
            </Frame>
            <Frame Grid.Row="1" BackgroundColor="{DynamicResource DynamicQuartaryDark}">
                <Label TextColor="{DynamicResource DynamicQuartaryText}" />
            </Frame>
        </Grid>
    </HorizontalStackLayout>

</ContentView>
