<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="udemyMAUI1.MVVM.Views.MenuView"
             Title="MenuView"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{ DynamicResource DynamicPrimary}">


    <Grid ColumnDefinitions=".33*,.34*,.33*" RowDefinitions=".1*,.3*,.3*,.3*">
        <Label Grid.ColumnSpan="3" BackgroundColor="{ DynamicResource DynamicPrimary }" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center" Text="- MAUIVERTER -" TextColor="{ DynamicResource DynamicPrimaryText}" VerticalTextAlignment="Center" />
        <!--#region  Information-->
        <Grid Grid.Row="1" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimaryDark}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xF0A0;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Information" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Volume-->
        <Grid Grid.Row="1" Grid.Column="1" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimary}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xF1B2;" Size="200" Color="{DynamicResource DynamicPrimaryText}"/>
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Volume" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Length-->
        <Grid Grid.Row="1" Grid.Column="2" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimaryLight}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xF044;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Length" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Mass-->
        <Grid Grid.Row="2" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimary}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xF24E;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Information" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Temperature-->
        <Grid Grid.Row="2" Grid.Column="1" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimaryLight}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xE803;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Temperature" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Energy-->
        <Grid Grid.Row="2" Grid.Column="2" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimaryDark}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xF525;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Energy" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Area-->
        <Grid Grid.Row="3" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimaryLight}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xF1FE;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Area" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Speed-->
        <Grid Grid.Row="3" Grid.Column="1" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimaryDark}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xE82A;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Speed" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
        <!--#region  Duration-->
        <Grid Grid.Row="3" Grid.Column="2" Padding="15" RowDefinitions=".7*, .3*" BackgroundColor="{DynamicResource DynamicPrimary}">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
            </Grid.GestureRecognizers>
            <Image>
                <Image.Source>
                    <FontImageSource FontFamily="MIcons" Glyph="&#xE800;" Size="200" Color="{DynamicResource DynamicPrimaryText}" />
                </Image.Source>
            </Image>
            <Label Grid.Row="1" HorizontalTextAlignment="Center" Text="Duration" TextColor="{ DynamicResource DynamicPrimaryText }" VerticalTextAlignment="Center" FontFamily="GameOfSquids" />
        </Grid>
        <!--#endregion-->
    </Grid>
</ContentPage>