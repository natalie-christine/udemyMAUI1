<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="udemyMAUI1.Tabb1"
            BarBackgroundColor="DarkMagenta"
            BarTextColor="DarkGrey"
            SelectedTabColor="LightPink"
            UnselectedTabColor="DarkOrchid"
            >
    <ContentPage Title="Stuff1">
        <StackLayout
            Spacing="20">
            <Label Text="Tab1" />
            <RadioButton CheckedChanged="RadioButton1_CheckedChanged" 
                         Content="Option 1"/> 
            <Label Text="Tab2" />
            <RadioButton CheckedChanged="RadioButton2_CheckedChanged" 
             Content="Option 2"/>
            <Label Text="Tab3" />
            <RadioButton CheckedChanged="RadioButton3_CheckedChanged" 
             Content="Option 3"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Stuff2">
        <StackLayout
            Spacing="20">
            <Label Text="One"/>
            <Label Text="Two"/>
            <Label Text="Three"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Stuff3">
        <StackLayout
            Spacing="20">
            <Label Text="Nichts" />
            <Label Text="Hier" />
            <Label Text="Zusehen" />
        </StackLayout>
    </ContentPage>
</TabbedPage>